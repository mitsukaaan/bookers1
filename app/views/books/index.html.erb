<body>
 <table>
  <flash><%= flash[:notice] %></flash>
   <h1>Books</h1>
    <thead>
     <tr>
       <th>本のタイトル</th>
       <th>感想</th>
       <th colspan="3"></th>
     </tr>
    </thead>
    
    <tbody>
     <% @books.each do |book| %>
      <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td>
       <%= link_to "Show", book_path(book.id) %>
       <%= link_to "Edit", edit_book_path(book.id) %>
       <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
       <% end %>
       </td>
    </tbody>
 </table>
   
  
 
